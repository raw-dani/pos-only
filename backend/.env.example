# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=pos_invoice

# JWT Configuration
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_key_here

# CORS Configuration
# For development: http://localhost:3000
# For production: https://your-production-domain.com
CORS_ORIGIN=http://localhost:3000
PRODUCTION_URL=https://your-production-domain.com

# SSL Configuration (Optional - for HTTPS)
# Path to SSL certificates (default: ./ssl)
# SSL_PATH=./ssl

# License Configuration
# IMPORTANT: Generate a secure license key for encryption
# Generate: openssl rand -base64 32
# This key is used to encrypt the license file
# KEEP THIS SECRET - share with buyers only when they purchase
LICENSE_KEY=your_secure_license_key_here
